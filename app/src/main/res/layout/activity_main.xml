<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_user_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:width="72dp"
        android:text="User ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_user_id"
        app:layout_constraintLeft_toRightOf="@id/tv_user_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:minWidth="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_room_id"
        app:layout_constraintTop_toTopOf="@id/tv_user_id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:width="72dp"
        android:text="Room ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_room_id"
        app:layout_constraintLeft_toRightOf="@id/tv_room_id"
        app:layout_constraintTop_toTopOf="@id/et_user_id"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:minWidth="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_stream_id"
        app:layout_constraintTop_toTopOf="@id/tv_room_id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:width="72dp"
        android:text="Stream ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_stream_id"
        app:layout_constraintLeft_toRightOf="@id/tv_stream_id"
        app:layout_constraintTop_toTopOf="@id/et_room_id"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:minWidth="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enter"
        app:layout_constraintTop_toTopOf="@id/tv_stream_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_network_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>